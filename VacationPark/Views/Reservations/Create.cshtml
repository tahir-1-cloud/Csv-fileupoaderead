@model VacationPark.Models.Reservation

@{
    ViewBag.Title = "Create Reservation";
}

<h2>Create Reservation</h2>

@using (Html.BeginForm("Create", "Reservations", FormMethod.Post))
{
    <div class="form-group">
        <label for="parkId">Select Park:</label>
        <select id="parkId" name="parkId" class="form-control" required>
            <option value="">-- Select Park --</option>
            @foreach (var park in ViewBag.Parks as IEnumerable<VacationPark.Models.Park>)
            {
                <option value="@park.ParkID">@park.Name (@park.Location)</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="capacity">Number of People:</label>
        <input type="number" id="capacity" name="capacity" class="form-control" min="1" required />
    </div>

    <div class="form-group">
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="StartDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="EndDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="customerId">Customer ID:</label>
        <input type="number" id="customerId" name="CustomerID" class="form-control" min="1" required />
    </div>

    <button type="submit" class="btn btn-primary">Create Reservation</button>
}
