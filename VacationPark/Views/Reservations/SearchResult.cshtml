@model IEnumerable<VacationPark.Models.Reservation>

@{
    ViewBag.Title = "Search Results";
}

<h2>Search Results</h2>

@if (!Model.Any())
{
    <p>No reservations found matching the criteria.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Reservation ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Customer ID</th>
                <th>House ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.ReservationID</td>
                    <td>@reservation.StartDate.ToShortDateString()</td>
                    <td>@reservation.EndDate.ToShortDateString()</td>
                    <td>@reservation.CustomerID</td>
                    <td>@reservation.HouseID</td>
                </tr>
            }
        </tbody>
    </table>
}
